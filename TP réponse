#include <Wire.h>
#include <LiquidCrystal_I2C.h>

// Création d'un objet LCD avec l'adresse I2C de l'écran
LiquidCrystal_I2C lcd(0x27, 16, 2);
 
float operation;
float resultat;
float saisirVal;

void setup() 
{
  Wire.begin();
Serial.begin(9600);
lcd.begin(16,2);
lcd.init();
lcd.backlight();
}

