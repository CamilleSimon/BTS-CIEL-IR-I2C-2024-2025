  void calcul();
{
  if(operation == '+')
    resultat = premierNombre + deuxiemeNombre;
  if(operation == '-')
    resultat = premierNombre - deuxiemeNombre;
  if(operation == '*')
    resultat = premierNombre * deuxiemeNombre;
  if(operation == '/')
    resultat = premierNombre / deuxiemeNombre;
}
